<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <link href="https://unpkg.com/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .cart-header {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 30px;
            text-align: center;
        }
        .cart-item {
            font-size: 1.2rem;
            padding: 15px;
            border: 1px solid #e3e3e3;
            border-radius: 10px;
            margin-bottom: 10px;
            background-color: #f8f9fa;
        }
        .cart-item strong {
            font-weight: 600;
        }
        .cart-total {
            font-size: 1.5rem;
            font-weight: bold;
            margin-top: 20px;
            padding: 15px;
            background-color: #e9ecef;
            border-radius: 10px;
            text-align: right;
            border: 1px solid #d1d1d1;
        }
        .cart-total span {
            color: #28a745;
        }
        .empty-cart-message {
            text-align: center;
            margin-top: 40px;
            font-size: 1.5rem;
            font-weight: bold;
            color: #343a40;
        }
        .cart-actions {
            margin-top: 30px;
            text-align: right;
        }
        .cart-actions .btn {
            padding: 10px 20px;
            font-size: 1.1rem;
            margin-right: 10px;
        }
        .cart-container {
            margin-top: 80px;
        }
        @media (max-width: 768px) {
            .cart-item {
                font-size: 1rem;
            }
            .cart-total {
                font-size: 1.3rem;
                text-align: center;
            }
            .cart-actions {
                text-align: center;
            }
        }
    </style>
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">WEB322 Store</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    {{#navLink "/about"}}About{{/navLink}}
                    {{#navLink "/shop"}}Shop{{/navLink}}
                    {{#navLink "/items"}}Items{{/navLink}}
                    {{#navLink "/categories"}}Categories{{/navLink}}
                    {{#navLink "/items/add"}}Add Items{{/navLink}}
                </ul>
            </div>
        </div>
    </nav>
    <!-- Cart Content -->
    <div class="container cart-container">
        <h1 class="cart-header">Your Shopping Cart</h1>

        {{#if cartItems.length}}
            <ul class="list-group">
                {{#each cartItems}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><strong>{{this.name}}</strong> - ${{this.price}}</span>
                    </li>
                {{/each}}
            </ul>

            <!-- Cart Total -->
            <div class="cart-total">
                Total: <span>${{total}}</span>
            </div>

            <!-- Cart Actions -->
            <div class="cart-actions d-flex justify-content-between">
                <!-- Clear Cart Button -->
                <form action="/cart/clear" method="POST">
                    <button type="submit" class="btn btn-danger">Clear Cart</button>
                </form>

                <!-- Continue Shopping Button -->
                <a href="/shop" class="btn btn-primary">Continue Shopping</a>

                <!-- Checkout Button -->
                <form action="/cart/checkout" method="POST">
                    <button type="submit" class="btn btn-success">Checkout</button>
                </form>
            </div>
        {{else}}
            <!-- Empty Cart Message -->
            <p class="empty-cart-message">Your cart is empty.</p>
            <div class="text-center">
                <a href="/shop" class="btn btn-primary mt-4">Go to Shop</a>
            </div>
        {{/if}}
    </div>

</body>
</html>