<div class="row">
    <div class="col-md-12">
        <h2>Categories
            <a href="/categories/add" class="btn btn-success pull-right">Add Category</a>
        </h2>
        {{#if message}}
            <div class="alert alert-danger">{{message}}</div>
        {{else}}
            <table class="table">
                <thead>
                    <tr>
                        <th>Category ID</th>
                        <th>Category Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{category}}</td>
                            <td>
                                <a href="/categories/delete/{{id}}" class="btn btn-danger">remove</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{/if}}
    </div>
</div>