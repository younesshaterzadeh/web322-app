<div class="row">
  <div class="col-md-12">
    <h2>Items
      <a href="/items/add" class="btn btn-success pull-right">Add Post</a>
    </h2>
    {{#if message}}
      <div class="alert alert-danger">{{message}}</div>
    {{else}}
      <table class="table">
        <thead>
          <tr>
            <th>Post ID</th>
            <th>Title</th>
            <th>Post Date</th>
            <th>Price</th>
            <th>Category</th>
            <th>Published</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each items}}
            <tr>
              <td>{{id}}</td>
              <td>{{title}}</td>
              <td>{{formatDate postDate}}</td>
              <td>{{price}}</td>
              <td>{{category}}</td>
              <td>{{published}}</td>
              <td>
                <a href="/items/delete/{{id}}" class="btn btn-danger">remove</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{/if}}
  </div>
</div>
