<div class="row">
  <section class="main col-md-9">
    {{#if data.posts}}
    <div class="item-list">
      {{#each data.posts}}
      <div class="item">
        <h2>{{this.title}}</h2>
        <img src="{{this.featureImage}}" alt="{{this.title}}" style="width:100%" />
        <p>{{{safeHTML this.body}}}</p>
        <strong>Price:</strong> ${{this.price}}<br />
        <strong>Category:</strong> {{this.Category.category}}<br />
        <strong>Last Updated:</strong> {{formatDate this.postDate}}
      </div>
      {{/each}}
    </div>
    {{else}}
    <div class="text-center">
      <h2>{{message}}</h2>
      <p>Please try another Post / Category</p>
    </div>
    {{/if}}
  </section>

  <aside class="col-md-3">
    {{#if data.categories}}
    <h4>Categories</h4>
    <ul class="list-group">
      {{#each data.categories}}
      <a href="/shop?category={{this.id}}" class="list-group-item">{{this.category}}</a>
      {{/each}}
    </ul>
    {{else}}
    <p>No categories available.</p>
    {{/if}}
  </aside>
</div>
